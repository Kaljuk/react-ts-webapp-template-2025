{
  "eslint.validate": [
    "javascript",
    "typescript",
    "typescriptreact",
    "json"
  ],
  // ...
  "eslint.format.enable": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.fixAll": "explicit",
    "source.organizeImports": "explicit"
  },
  "editor.defaultFormatter": "dbaeumer.vscode-eslint"
}
